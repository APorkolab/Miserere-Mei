{
  "name": "backend",
  "version": "2.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node src/wait-for-db.js",
    "dev": "nodemon --inspect=0.0.0.0:9229 src/server.js",
    "build": "echo 'No build step required for Node.js backend'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "coverage": "jest --coverage",
    "lint": "echo 'Linting backend code...' && find src -name '*.js' | head -5",
    "lint:fix": "echo 'Formatting backend code...' && npx prettier --write src/**/*.js",
    "format": "prettier --write src/**/*.js",
    "db:migrate": "npx sequelize-cli db:migrate",
    "db:seed": "npx sequelize-cli db:seed:all",
    "db:test-connection": "node scripts/test-db-connection.js",
    "security:audit": "npm audit --audit-level=moderate",
    "start:prod": "NODE_ENV=production node src/server.js"
  },
  "author": "Adam Dr. Porkolab",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "mysql2": "^3.10.3",
    "npkill": "^0.12.2",
    "sequelize": "^6.37.3",
    "swagger-ui-express": "^5.0.1",
    "wide-align": "^1.1.5",
    "winston": "^3.13.1",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "eslint": "^9.35.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^56.1.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-security": "^3.0.1",
    "jest": "^30.1.3",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4"
  }
}
